<!DOCTYPE html>
<html>
<head>
    <title>NoteFlex OS Browser</title>
    <hta:application 
        id="htaBrowser"
        border="thin"
        scroll="no"
        caption="yes"
        maximizeButton="yes"
        minimizeButton="yes"
        sysmenu="yes"
    />
    <!-- FontAwesome Link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f4f4f4;
        }
        .container {
            text-align: center;
            margin-top: 30px;
        }
        input[type="text"] {
            width: 60%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .btn {
            padding: 10px 20px;
            font-size: 16px;
            margin-left: 10px;
            cursor: pointer;
            border: none;
            background-color: #4CAF50;
            color: white;
            border-radius: 4px;
        }
        .link-btns {
            margin-top: 20px;
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
        }
        .link-btn {
            margin: 5px;
            padding: 10px 20px;
            background-color: #2196F3;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
        }
        .link-btn i {
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>NoteFlex OS Browser</h1>
        <p>Enter a website URL and click "Open" to launch it in your default browser.</p>
        <input type="text" id="urlInput" placeholder="https://example.com" value="https://">
        <button class="btn" onclick="openWebsite()">
            <i class="fas fa-globe"></i> Open
        </button>

        <div class="link-btns">
            <h3>Quick Links:</h3>
            <button class="link-btn" onclick="openPredefinedSite('https://github.com')">
                <i class="fab fa-github"></i> GitHub
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://www.youtube.com')">
                <i class="fab fa-youtube"></i> YouTube
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://www.google.com')">
                <i class="fas fa-search"></i> Google
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://www.wikipedia.org')">
                <i class="fas fa-book"></i> Wikipedia
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://www.facebook.com')">
                <i class="fab fa-facebook"></i> Facebook
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://twitter.com')">
                <i class="fab fa-twitter"></i> Twitter
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://www.instagram.com')">
                <i class="fab fa-instagram"></i> Instagram
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://www.linkedin.com')">
                <i class="fab fa-linkedin"></i> LinkedIn
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://www.reddit.com')">
                <i class="fab fa-reddit"></i> Reddit
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://www.netflix.com')">
                <i class="fas fa-film"></i> Netflix
            </button>
            <button class="link-btn" onclick="openPredefinedSite('https://www.amazon.com')">
                <i class="fas fa-shopping-cart"></i> Amazon
            </button>
        </div>
    </div>

    <script>
        var shell = new ActiveXObject("WScript.Shell");

        function openWebsite() {
            var url = document.getElementById("urlInput").value;
            if (url === "") {
                alert("Please enter a valid URL.");
                return;
            }
            if (!url.startsWith("http://") && !url.startsWith("https://")) {
                url = "http://" + url;
            }
            shell.Run('"' + url + '"');
        }

        function openPredefinedSite(siteUrl) {
            shell.Run('"' + siteUrl + '"');
        }
    </script>
</body>
</html>
